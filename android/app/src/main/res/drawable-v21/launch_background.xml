<?xml version="1.0" encoding="utf-8"?>
<!-- Modify this file to customize your launch splash screen -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color - light blue for better contrast with dark icon -->
    <item>
        <color android:color="#E3F2FD" />
    </item>

    <!-- App icon centered - using foreground icon directly for better visibility -->
    <item
        android:width="96dp"
        android:height="96dp"
        android:gravity="center">
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher_foreground" />
    </item>
</layer-list>
